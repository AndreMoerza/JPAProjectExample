<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="JPAProj" transaction-type="RESOURCE_LOCAL">
		<class>com.mitrais.JPAProj.entity.Employee</class>
		<class>com.mitrais.JPAProj.entity.StaffWeakEntity</class>
		<class>com.mitrais.JPAProj.entity.TeachingStaffWeakEntity</class>
		<class>com.mitrais.JPAProj.entity.NonTeachingStaffWeakEntity</class>
		<class>com.mitrais.JPAProj.entity.StaffJoined</class>
		<class>com.mitrais.JPAProj.entity.TeachingStaffJoined</class>
		<class>com.mitrais.JPAProj.entity.NonTeachingStaffJoined</class>
		<class>com.mitrais.JPAProj.entity.StaffTables</class>
		<class>com.mitrais.JPAProj.entity.TeachingStaffTables</class>
		<class>com.mitrais.JPAProj.entity.NonTeachingStaffTables</class>
		<class>com.mitrais.JPAProj.entity.DepartmentManyToOne</class>
		<class>com.mitrais.JPAProj.entity.EmployeeManyToOne</class>
		<class>com.mitrais.JPAProj.entity.EmployeeOTM</class>
		<class>com.mitrais.JPAProj.entity.DepartmentOTM</class>
		<class>com.mitrais.JPAProj.entity.DepartmentOTO</class>
		<class>com.mitrais.JPAProj.entity.EmployeeOTO</class>
		<class>com.mitrais.JPAProj.entity.Clas</class>
		<class>com.mitrais.JPAProj.entity.Teacher</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/springmvc?SSL=false"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="root"/>
			<property name="eclipselink.logging.level" value="FINE"/>
         	<property name="eclipselink.ddl-generation" value="create-tables"/>
		</properties>
	</persistence-unit>
</persistence>
